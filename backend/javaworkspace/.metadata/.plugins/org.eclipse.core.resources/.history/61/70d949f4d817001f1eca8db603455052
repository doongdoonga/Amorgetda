package org.Amorgetda.day04.control.loop.exercise;

public class Exercise_fordouble01 {
	
	public static void main(String [] args) {
		// *
		// **
		// ***
		// ****
		// *****
		// ******
		
		for(int i = 1; i <= 6; i++) {
			int n = 1;
			for(int j = 1; j <= n; j++) {
				System.out.println("*");
			}
			System.out.println();
			n++;
		}
		
		
		
		
		
		
		System.out.print("*");
		System.out.println();
	}
}